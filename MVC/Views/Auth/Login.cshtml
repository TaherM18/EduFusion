@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<link rel="stylesheet" href="~/css/Login.css">

<div class="login-page">
    <div class="login-container">
        <div class="login-header">
            <h2>Welcome Back</h2>
            <p>Please enter your credentials to continue</p>
        </div>

        <div class="card">
            <div class="card-body">
                <!-- Kendo UI Form -->
                <form id="loginForm">
                    <div id="formContainer"></div>
                    <button type="submit" class="k-button k-primary btn-login">Sign In</button>
                </form>

                <div id="errorMessage" class="k-alert k-alert-error" style="display: none;"></div>
                
                <div class="login-footer">
                    <div class="form-group text-center">
                        <a href="/account/forgotpassword" class="forgot-password">Forgot Password?</a>
                    </div>
                    <div class="form-group text-center">
                        <span>Don't have an account? </span>
                        <a href="/account/register" class="register-link">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/services/Login.service.js"></script>
    
}