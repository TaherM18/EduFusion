<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - EduTrack</title>

    <!-- Bootstrap & Kendo UI -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/kendo/kendo.default-v2.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/kendo/kendo.all.min.js"></script>

    <!-- Custom Styles -->
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        /* Navbar */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1050;
            background-color: #2c3e50 !important;
            padding: 12px 20px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .navbar-brand img {
            width: 160px;
            height: auto;
        }

        .navbar-nav .nav-link {
            color: #fff !important;
            font-size: 16px;
            font-weight: bold;
            padding: 10px 15px;
        }

        .navbar-nav .nav-link:hover {
            color: #f8c02d !important;
        }

        /* Sidebar */
        .sidebar {
            background-color: #2c3e50;
            color: #fff;
            position: fixed;
            top: 0;
            left: -270px;
            width: 270px;
            height: 100vh;
            padding: 10px 20px;
            transition: left 0.3s ease-in-out;
            z-index: 1000;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }

        .sidebar .menu-container {
            margin-top: 100px;
            /* Moves components below toggle button */
        }

        .sidebar a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 12px;
            border-radius: 5px;
            transition: 0.3s;
            font-size: 16px;
        }

        .sidebar a:hover,
        .sidebar .active {
            background-color: #f8c02d;
            color: #2c3e50;
        }

        .sidebar .menu-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 10px;
            border-bottom: 2px solid #f8c02d;
            padding-bottom: 5px;
        }

        /* Sidebar Toggle Button */
        .sidebar-toggle {
            background: none;
            border: none;
            cursor: pointer;
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            z-index: 1100;
            padding: 5px;
        }

        .navbar .sidebar-toggle div {
            width: 30px;
            height: 4px;
            background-color: #f8c02d;
            margin: 6px 0;
            transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
        }

        .sidebar-toggle div {
            width: 30px;
            height: 4px;
            background-color: #f8c02d;
            margin: 6px 0;
            transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
        }

        /* Sidebar Open State */
        .sidebar-open .sidebar {
            left: 0;
        }

        .sidebar-open .content {
            margin-left: 270px;
            transition: margin-left 0.3s ease-in-out;
        }

        .sidebar-open .sidebar-toggle div:nth-child(1) {
            transform: rotate(45deg) translate(5px, 5px);
        }

        .sidebar-open .sidebar-toggle div:nth-child(2) {
            opacity: 0;
        }

        .sidebar-open .sidebar-toggle div:nth-child(3) {
            transform: rotate(-45deg) translate(5px, -5px);
        }

        /* Main Content */
        /* Adjust Content Padding to Prevent Overlap */
        .content {
            padding: 80px 20px 20px;
            /* Adjust padding to match navbar height */
            transition: margin-left 0.3s ease-in-out;
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="menu-container">
            <h5 class="menu-title">📌 Admin Dashboard</h5>
            <a href="/admin/index" class="active">📊 Dashboard</a>
            <a href="/admin/profile">👤 Profile</a>
            <a href="/admin/students">👨‍🎓 Viewing Students</a>
            <a href="/admin/timetable">📅 Timetable</a>
            <a href="/admin/materials">📂 Materials</a>
            <h5 class="menu-title">📌 Student Dashboard</h5>
            <a href="/student/profile">👤 Student Profile</a>
            <a href="/student/index" class="active">📊 Dashboard</a>
            <a href="/student/timetable">📅 Timetable</a>
            <a href="/student/materials">📂 Materials</a>
            <h5 class="menu-title">📌 Teacher Dashboard</h5>
            <a href="/student/profile">👤 Teacher Profile</a>
            <a href="/teacher/index" class="active">📊 Dashboard</a>
            <a href="/teacher/classes">📚 My Classes</a>
            <a href="/material/upload">📂 Upload Materials</a>

        </div>
    </div>

    @await Html.PartialAsync("Navbar")


    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>

    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
            CheckLogin();
        })
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-open');
        }
    </script>
</body>

</html>
