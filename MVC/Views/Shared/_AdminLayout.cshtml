<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - EduTrack</title>

    <!-- Bootstrap & Kendo UI -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/kendo/kendo.default-v2.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/kendo/kendo.all.min.js"></script>

    <!-- Custom Styles -->
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        /* Navbar */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1050;
            background-color: #2c3e50 !important;
            padding: 12px 20px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .navbar-brand img {
            width: 160px;
            height: auto;
        }

        .navbar-nav .nav-link {
            color: #fff !important;
            font-size: 16px;
            font-weight: bold;
            padding: 10px 15px;
        }

        .navbar-nav .nav-link:hover {
            color: #f8c02d !important;
        }

        /* Sidebar */
        .sidebar {
            background-color: #2c3e50;
            color: #fff;
            position: fixed;
            top: 0;
            left: -270px;
            width: 270px;
            height: 100vh;
            padding: 10px 20px;
            transition: left 0.3s ease-in-out;
            z-index: 1000;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }

        .sidebar .menu-container {
            margin-top: 100px;
            /* Moves components below toggle button */
        }

        .sidebar a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 12px;
            border-radius: 5px;
            transition: 0.3s;
            font-size: 16px;
        }

        .sidebar a:hover,
        .sidebar .active {
            background-color: #f8c02d;
            color: #2c3e50;
        }

        .sidebar .menu-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 10px;
            border-bottom: 2px solid #f8c02d;
            padding-bottom: 5px;
        }

        /* Sidebar Toggle Button */
        .sidebar-toggle {
            background: none;
            border: none;
            cursor: pointer;
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            z-index: 1100;
            padding: 5px;
        }

        .navbar .sidebar-toggle div {
            width: 30px;
            height: 4px;
            background-color: #f8c02d;
            margin: 6px 0;
            transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
        }

        .sidebar-toggle div {
            width: 30px;
            height: 4px;
            background-color: #f8c02d;
            margin: 6px 0;
            transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
        }

        /* Sidebar Open State */
        .sidebar-open .sidebar {
            left: 0;
        }

        .sidebar-open .content {
            margin-left: 270px;
            transition: margin-left 0.3s ease-in-out;
        }

        .sidebar-open .sidebar-toggle div:nth-child(1) {
            transform: rotate(45deg) translate(5px, 5px);
        }

        .sidebar-open .sidebar-toggle div:nth-child(2) {
            opacity: 0;
        }

        .sidebar-open .sidebar-toggle div:nth-child(3) {
            transform: rotate(-45deg) translate(5px, -5px);
        }

        /* Main Content */
        /* Adjust Content Padding to Prevent Overlap */
        .content {
            padding: 80px 20px 20px;
            /* Adjust padding to match navbar height */
            transition: margin-left 0.3s ease-in-out;
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar">
    <div class="menu-container">
        <h5 class="menu-title">📌 Admin Dashboard</h5>
        <a href="/admin/index" class="active">📊 Dashboard</a>
        <a href="/admin/students">👨‍🎓 View Students</a>
        <a href="/admin/teachers">👨‍🎓 View Teacher</a>
        <a href="/admin/subjects">📅 Subjects</a>
        @* <a href="/admin/materials">📂 Materials</a> *@
    </div>
</div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid d-flex align-items-center">
            <!-- Sidebar Toggle Button -->
            <button class="sidebar-toggle" onclick="toggleSidebar()">
                <div></div>
                <div></div>
                <div></div>
            </button>
            <!-- Toggle Button & Logo in a Flexbox -->
            <div class="d-flex align-items-center">
                <!-- Sidebar Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Logo with margin for spacing -->
                <a class="navbar-brand d-flex align-items-center ms-4" href="/">
                    <img src="~/Logo3.png" alt="EduTrack Logo" style="width: 150px; height: auto; object-fit: cover;">
                </a>
            </div>

            <!-- Navbar Items (Right-Aligned) -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/Home">🏠 Home</a></li>
                    @* <li class="nav-item"><a class="nav-link" href="#">ℹ️ About</a></li> *@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" data-bs-toggle="dropdown">
                            <img src="~/images/anonymous.png" class="rounded-circle" width="30"> Admin
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="./Profile">👤 Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item text-danger" href="/Auth/Logout">🚪 Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-open');
        }
    </script>
</body>

</html>
