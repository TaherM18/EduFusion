<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - EduTrack</title>

    <!-- Bootstrap & Kendo UI -->
    <link rel="stylesheet" href="~/css/Layout.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/kendo/kendo.default-v2.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/kendo/kendo.all.min.js"></script>
</head>

<body>

    <div id="sidebarLoader"></div>

    <!-- Navbar -->
    @await Html.PartialAsync("Navbar")


    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>
    <script src="~/js/site.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            if (typeof IsAuth !== "undefined" && IsAuth === true) {
                $("#sidebarLoader").load("/Sidebar"); // Load sidebar dynamically
            }
        });

        function toggleSidebar() {
            document.body.classList.toggle('sidebar-open');
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-open');
        }
    </script>
</body>

</html>
