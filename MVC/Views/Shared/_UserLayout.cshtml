<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EduTrack - Home</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/kendo/kendo.default-v2.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/kendo/kendo.all.min.js"></script>
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(90deg, #2c3e50, #34495e);
            padding: 12px 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1050;
            transition: all 0.3s ease-in-out;
        }

        .navbar-brand {
            font-size: 22px;
            font-weight: bold;
            color: #f8c02d !important;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .navbar-brand img {
            width: 50px;
            height: auto;
            object-fit: cover;
        }

        .navbar-nav {
            display: flex;
            gap: 15px;
        }

        .nav-link {
            color: #fff !important;
            font-size: 16px;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: color 0.3s ease-in-out;
        }

        .nav-link:hover {
            color: #f8c02d !important;
            transform: scale(1.1);
        }

        .btn-custom {
            background-color: #f8c02d;
            color: #2c3e50;
            font-weight: 500;
            padding: 8px 15px;
            border-radius: 5px;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: background-color 0.3s ease;
        }

        .btn-custom:hover {
            background-color: #e0a800;
        }

        /* Adjust main content to avoid being hidden under navbar */
        .content {
            padding-top: 80px;
        }

        /* Footer */
        .footer {
            background-color: #2c3e50;
            color: #fff;
            padding: 20px 0;
            text-align: center;
            width: 100%;
            position: fixed;
            bottom: 0;
            left: 0;
            z-index: 1000;
        }

        .footer a {
            color: #f8c02d;
            text-decoration: none;
        }

        .footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="~/Logo3.png" alt="EduTrack Logo" style="height: auto; object-fit: cover; width: 200px;">
        </a>
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Teacher" asp-action="Register">
                            <i class="fas fa-user-plus"></i> Teacher Register
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="User" asp-action="Login">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <script src="~/js/site.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            if (typeof IsAuth !== "undefined" && IsAuth === true) {
                $("#sidebarLoader").load("/Sidebar"); // Load sidebar dynamically
            }
        });

        function toggleSidebar() {
            document.body.classList.toggle('sidebar-open');
        }
    </script>

    <!-- Main Content -->
    <div class="container mt-5 content">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 EduTrack. All rights reserved. | <a href="#">Privacy Policy</a></p>
        </div>
    </footer>
</body>

</html>
