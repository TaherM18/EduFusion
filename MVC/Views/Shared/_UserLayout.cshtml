<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EduTrack - Home</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/kendo/kendo.default-v2.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/kendo/kendo.all.min.js"></script>
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(90deg, #2c3e50, #34495e);
            padding: 12px 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1050;
            transition: all 0.3s ease-in-out;
        }

        .navbar-brand {
            font-size: 22px;
            font-weight: bold;
            color: #f8c02d !important;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .navbar-brand img {
            width: 50px;
            height: auto;
            object-fit: cover;
        }

        .navbar-nav {
            display: flex;
            gap: 15px;
        }

        .nav-link {
            color: #fff !important;
            font-size: 16px;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: color 0.3s ease-in-out;
        }

        .nav-link:hover {
            color: #f8c02d !important;
            transform: scale(1.1);
        }

        .btn-custom {
            background-color: #f8c02d;
            color: #2c3e50;
            font-weight: 500;
            padding: 8px 15px;
            border-radius: 5px;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: background-color 0.3s ease;
        }

        .btn-custom:hover {
            background-color: #e0a800;
        }

        /* Adjust main content to avoid being hidden under navbar */
        .content {
            padding-top: 80px;
        }

        /* Footer */
        .footer {
            background-color: #2c3e50;
            color: #fff;
            padding: 20px 0;
            text-align: center;
            width: 100%;
            position: fixed;
            bottom: 0;
            left: 0;
            z-index: 1000;
        }

        .footer a {
            color: #f8c02d;
            text-decoration: none;
        }

        .footer a:hover {
            text-decoration: underline;
        }

        /* Style Kendo Menu like Bootstrap Navbar */
        #kendoMenu {
            background: linear-gradient(90deg, #2c3e50, #34495e) !important;
            border-radius: 5px;
        }

        /* Match menu items to navbar styles */
        .k-menu .k-link {
            color: white !important;
            font-size: 16px;
            font-weight: 500;
            padding: 12px 15px;
            text-decoration: none;
            transition: color 0.3s ease-in-out;
        }

        .k-menu .k-link:hover {
            color: #f8c02d !important;
            transform: scale(1.1);
        }

        /* Toolbar styling */
        #kendoToolbar {
            background: linear-gradient(90deg, #2c3e50, #34495e) !important;
            border-radius: 5px;
            padding: 5px;
        }

        /* Toolbar buttons */
        .k-toolbar .k-button {
            background: none !important;
            color: white !important;
            font-size: 16px;
            font-weight: 500;
            border: none !important;
            transition: color 0.3s ease-in-out;
        }

        /* Hover effect for toolbar buttons */
        .k-toolbar .k-button:hover {
            color: #f8c02d !important;
            transform: scale(1.1);
        }

        /* Adjust icons */
        .k-toolbar .k-icon {
            color: white !important;
            font-size: 18px !important;
            margin-right: 5px;
        }
        .k-menu .k-item .k-item> .k-link {
        color: #f8c02d !important; /* Orange */
    }

    /* Change text color to white on hover */
    .k-menu .k-item > .k-link:hover {
        color: #FFFFFF !important; /* White */
    }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="~/Logo3.png" alt="EduTrack Logo" style="height: auto; object-fit: cover; width: 200px;">
        </a>
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <!-- Kendo Menu Inside Navbar -->
                <div id="kendoMenu"></div>

                <!-- Kendo Toolbar Inside Navbar -->
                <div id="kendoToolbar"></div>
            </div>
        </div>
    </nav>


    <script>
        $(document).ready(function () {
            // Initialize Kendo Menu with submenu opening beside
            $("#kendoMenu").kendoMenu({
                openOnClick: false, // Keep default hover behavior
                direction: "right", // Ensure submenus open beside the parent menu
                dataSource: [
                    { text: "Home", url: "/" },
                    { text: "Teacher Register", url: "/Teacher/Register" },
                    { text: "Login", url: "/Auth/Login" },
                    {
                        text: "More",
                        items: [
                            { text: "Courses"},
                            { text: "Reports"},
                            {
                                text: "Other Options", items: [
                                    
                                    { text: "Settings"},
                                    { text: "Help" },
                                    { text: "Contact Us"}
                                ]
                            }
                        ]
                    }
                ]
            });

            // Initialize Kendo Toolbar (Only Search and Notifications)
            $("#kendoToolbar").kendoToolBar({
                items: [
                    { type: "button", text: "Search", icon: "search", click: function () { alert("Search clicked!"); } },
                    { type: "button", text: "Notifications", icon: "bell", click: function () { alert("No new notifications"); } }
                ]
            });
        });
    </script>


    <!-- Main Content -->
    <div class="container mt-5 content">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 EduTrack. All rights reserved. | <a href="#">Privacy Policy</a></p>
        </div>
    </footer>
</body>

</html>
