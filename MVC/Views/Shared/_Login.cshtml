@using Microsoft.AspNetCore.Mvc.RazorPages
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Tiser</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/swal/swal.min.css" />
    <script src="~/lib/swal/swal.js"></script>
    <link rel="stylesheet" href="~/lib/kendo/kendo.default-v2.min.css">
    <style>
        .left-menu>li,
        .right-menu>li {
            border-bottom: 1px solid black;
            font-size: large;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }

        .left-menu>li:hover,
        .right-menu>li:hover {
            background-color: orange;
            cursor: pointer;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-warning">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><img src="/tlabs.png" alt="Logo" width="60"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="homeDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">Home</a>
                        <ul class="dropdown-menu" aria-labelledby="homeDropdown">
                            <li><a class="dropdown-item" href="#">Home</a></li>
                            <li><a class="dropdown-item" href="#">Our Services</a></li>
                            <li><a class="dropdown-item" href="#">Company Location</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="aboutDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">About</a>
                        <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                            <li><a class="dropdown-item" href="#">About Us</a></li>
                            <li><a class="dropdown-item" href="#">Our Team</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="blogDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">Blogs</a>
                        <ul class="dropdown-menu" aria-labelledby="blogDropdown">
                            <li><a class="dropdown-item" href="#">Latest Blogs</a></li>
                            <li><a class="dropdown-item" href="#">Popular Posts</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="dropdown-item" href="/Auth/Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="dropdown-item" href="/Auth/Login">Login</a>
                    </li>
                    @* <li class="nav-item">
                        <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">User</a>
                        <div class="col-md-2 bg-warning p-3 m-1 dropdown-menu dropdown-menu-end"
                            aria-labelledby="userDropdown" style="right: 0 !important;">
                            <div class="row d-flex align-items-center">
                                <div class="avatar col-5 bg-light text-center me-2 p-2">
                                    <img src="~/images/anonymous.png" class="img img-fluid" width="85px" alt="">
                                </div>
                                <div class="col-6 p-2">
                                    <div class="row p-2"><span>Username</span></div>
                                    <div class="row p-2"><button>Logout</button></div>
                                </div>
                            </div>
                            <ul class="list-unstyled mt-3 right-menu">
                                <li>User Dashboard</li>
                                <li>Settings</li>
                            </ul>
                        </div>
                    </li> *@
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Layout -->
    <div class="container-fluid mt-3">
        <div class="row">

            @* <!-- left Sidebar -->
            <div class="col-md-2 bg-warning p-3 m-1" style="min-height: 88vh;">
                <div class="mb-2">
                    <input class="form-control" type="text" placeholder="Search here...">
                </div>
                <ul class="list-unstyled left-menu">
                    <li onclick="window.location.href = '/resources'">Public Resources</li>
                    <li>Apply Research Program</li>
                    <li>Products</li>
                    <li>Services</li>
                    <li>Help Desk</li>
                </ul>
            </div> *@

            <!-- Main Content -->
            <div>
                @RenderBody()
            </div>


            <!-- End  -->
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/kendo/kendo.all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
